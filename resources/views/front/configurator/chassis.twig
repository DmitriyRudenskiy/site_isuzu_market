{% set step = 2 %}
{% block title %}Конфигурация кузовной надстройки Исузу{% endblock %}

{% extends 'front.configurator.layout' %}

{% block configurator %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">

            <h2 class="xs-padding-25" style="margin-top: 0;">Шасси</h2>

            <div class="row xs-padding-15">
            {% if elf is not empty %}
            <div class="col-lg-4 col-md-4">
                <img src="/img/configurator/products/{{ type_id }}_{{ elf.0.id }}_1.jpg" alt="" style="width: 100%">
                <h3 class="text-center">Elf</h3>

                <ul class="nav nav-pills">
                    {% for item in elf %}
                        <li><a href="{{ route("front_configurator_leasing", {"typeId": type_id, "baseId": item.id}) }}">{{ item.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            {% if forward is not empty %}
                <div class="col-lg-4 col-md-4">
                    <img src="/img/configurator/products/{{ type_id }}_{{ forward.0.id }}_1.jpg" alt="" style="width: 100%">
                    <h3 class="text-center">Forward</h3>

                    <ul class="nav nav-pills">
                        {% for item in forward %}
                            <li><a href="{{ route("front_configurator_leasing", {"typeId": type_id, "baseId": item.id}) }}">{{ item.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            {% if giga is not empty %}
                <div class="col-lg-4 col-md-4">
                    <img src="/img/configurator/products/{{ type_id }}_{{ giga.0.id }}_1.jpg" alt="" style="width: 100%">
                    <h3 class="text-center">GIGA</h3>

                    <ul class="nav nav-pills">
                        {% for item in giga %}
                            <li><a href="{{ route("front_configurator_leasing", {"typeId": type_id, "baseId": item.id}) }}">{{ item.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
