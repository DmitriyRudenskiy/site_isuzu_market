<script>
    $(document).ready(function () {
        var isMobile = {
            Android: function () {
                return navigator.userAgent.match(/Android/i);
            },
            BlackBerry: function () {
                return navigator.userAgent.match(/BlackBerry/i);
            },
            iOS: function () {
                return navigator.userAgent.match(/iPhone|iPad|iPod/i);
            },
            Opera: function () {
                return navigator.userAgent.match(/Opera Mini/i);
            },
            Windows: function () {
                return navigator.userAgent.match(/IEMobile/i);
            },
            any: function () {
                return (isMobile.Android() || isMobile.BlackBerry() || isMobile.iOS() || isMobile.Opera() || isMobile.Windows());
            }
        };

        function clear() {
            $(".__effect_zoom_wrap").each(function () {

                $(this).find("img").insertAfter($(this));

                $(this).remove();
            });
        }

        $(window).resize(function () {
            clear()
        });

        var className = "__effect_zoom_wrap";

        if (!isMobile.any()) {
            $("img.__effect_zoom").hover(function () {
                if ($(this).parent().attr("class") !== className) {

                    var parent = $('<div>').addClass(className);
                    parent.width($(this).width());
                    parent.height($(this).height());
                    parent.css("overflow", "hidden");

                    parent.on('mouseover', function () {
                        clear();
                    });

                    $(this).wrap(parent);
                }
            }, clear);
        }
    });
</script>

<script>
    $(document).ready(function () {

        function getInMouth() {

            var price = parseInt($('[name="price"]').val());
            var period = parseInt($('[name="period"]').val()) * 12;
            var advance = parseInt($('[name="advance"]').val());
            var percent =  6.5;

            return Math.floor((((price * (percent / 100)) * (period / 12) + price) -  (price / 100 * advance)) / period);
        }

        var element = $(".pay_in_month");

        element.each(function(){
            element.html(getInMouth());

            $('[name="price"]').bind('change', function(){
                element.html(getInMouth());
            });

            $('[name="period"]').bind('change', function(){
                element.html(getInMouth());
            });
        });
    });

</script>
