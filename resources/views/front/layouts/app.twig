<script>
    $("#callback").submit(function(){

        var url = "{{ route('front_callback_index') }}";

        $.ajax({
            type: "POST",
            url: url,
            data: $(this).serialize(),
            success: function(data) {
                $("#alert_send_message").show();
                $("#modal_callback").modal('hide');
            }
        });

        return false;
    });
</script>
