{% extends 'front.layouts.app' %}

{% block title %}Выгодные условия покупки ISUZU в лизинг{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="title_a1">Лизинг</h1>
                <h3 class="space-xs">Выгодные условия покупки ISUZU в лизинг</h3>
            </div>
        </div>

        {% include 'front.leasing._block_info' %}

        <div class="row">
            <div class="col-md-6">
                <h2 class="item1 space-xs">Расчет</h2>
                <form method="get" action="{{ route('front_leasing_select_download') }}">
                    <input type="hidden" name="price" value="{{ product.price }}">
                    <div class="form-group" style="padding-top: 24px">
                        <label class="space-xs">Срок кредита, мес</label>

                        <div class="space-xs">
                            <div class="col-sm-8 col-md-8" style="padding-left: 0">
                                <input name="period" type="range" min="1" max="5" step="1" value="4">
                            </div>
                            <div class="col-sm-4 col-md-4">
                                <p class="form-control-static"><span id="preiod_value">48</span> мес.</p>
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="padding-top: 24px">
                        <label class="space-xs">Первоначальный взнос</label>

                        <div class="space-xs">
                            <div class="col-sm-8 col-md-9" style="padding-left: 0">
                                <input name="advance" type="range" min="10" max="50" step="1" value="50">
                            </div>
                            <div class="col-sm-4 col-md-3">
                                <p class="form-control-static"><span id="advance_value">50</span>%</p>
                            </div>
                        </div>
                    </div>

                    <p class="__leasing_view space-xs">
                        <button type="submit" class="btn btn-red" >Оформить заявку</button>
                    </p>
                </form>
            </div>
            <div class="col-md-4">
                <img src="{{ product.img }}" alt="..." style="width: 100%">

                <h2 class="space-xs">{{ product.title }}</h2>
                <p class="space-xs">Кузов: <span>шасси, 2 дв, 2013 м.г.</span></p>
                <p class="space-xs">Двигатель: <span>5.2 л., 155 л.с.</span></p>
                <p class="space-xs" style="color: #000000; font-size: 48px;">{{ product.price | number_format(0, '.', ' ')}} <span class="glyphicon glyphicon-ruble" aria-hidden="true" style="color: #000000; font-size: 42px;"></span></p>

                <p class="space-xs"><a href="{{ route('front_configurator_index') }}" class="btn btn-red" >Выбрать другую модель</a></p>
            </div>
        </div>


    </div>
{% endblock %}