{% extends 'front.layouts.app' %}

{% block title %}Выгодные условия покупки ISUZU в лизинг{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="title_a1">Лизинг</h1>
                <h3 class="space-xs">Выгодные условия покупки ISUZU в лизинг</h3>
            </div>
        </div>

        {% include 'front.leasing._block_info' %}

        <div class="row">
            <div class="col-md-6">
                <h2 class="item1 space-xs">Расчет</h2>
                {% include 'front.leasing._block_form.twig' %}
            </div>
            <div class="col-md-4">
                <img src="{{ product.img }}" alt="..." style="width: 100%">

                <h2 class="space-xs">{{ product.title }}</h2>
                <p class="space-xs">Кузов: <span>шасси, 2 дв, 2013 м.г.</span></p>
                <p class="space-xs">Двигатель: <span>5.2 л., 155 л.с.</span></p>
                <p class="space-xs" style="color: #000000; font-size: 48px;">{{ ((((product.price * (6.5 / 100)) * 5 + price) -  (price / 2))) / 60 | number_format(0, '.', ' ') }} <span class="glyphicon glyphicon-ruble" aria-hidden="true" style="color: #000000; font-size: 42px;"></span></p>

                <p class="space-xs"><a href="{{ route('front_configurator_index') }}" class="btn btn-red" >Выбрать другую модель</a></p>
            </div>
        </div>


    </div>
{% endblock %}