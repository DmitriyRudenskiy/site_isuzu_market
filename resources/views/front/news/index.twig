{% extends 'front.layouts.app' %}

{% block title %}Новости{% endblock %}

{% block content %}
<div class="container">
    <div class="row" style="margin-top: 48px;">
        <div class="col-lg-12">
            <p class="text-center space-xs" ><img src="http://att-isuzu.ru/images/0/164492681507110312.jpg" alt="" style="max-width: 100%"></p>
        </div>
    </div>

    <h1 class="title_a1">Новости</h1>

    <div class="row">
        {% for index,item in list %}
            <div class="col-lg-4 col-xs-12">
                <a href="{{ route('front_news_view', {'id': index + 1}) }}" class="thumbnail __news_thumbnail">
                    <img src="{{ item.image }}" alt="...">
                </a>
                <p class="__news_date space-xs">{{ item.date }}</p>
                <h3 class="space-xs">{{ item.title }}</h3>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}