{% extends 'front.layouts.app' %}

{% block title %}Лизинговые расчеты{% endblock %}

{% block content %}

    <div class="container">
        <h1 class="title_a1">Грузовики</h1>


        <div class="row hidden-xs">
            <div class="col-md-3">
                <p class="__search_result_item_action">Фильтр <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span></p>
            </div>
            <div class="col-md-4">
                <p class="__search_result_item_action">Найдено 25 грузовико</p>
            </div>

            <div class="col-md-5">
                <p class="__search_result_item_action text-right">Сортировать по цене <span class="glyphicon glyphicon-menu-up" aria-hidden="true"></span></p>
            </div>
        </div>


        <div class="row">
            <!-- filter -->
            <div class="col-md-3 hidden-xs">
                <h3>Тип грузовика</h3>

                {% for item in types %}
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="type_id" value="{{ item.id }}" {% if loop.first or item.id==product.type_id %}checked{% endif %}> {{ item.title | striptags }}
                        </label>
                    </div>
                {% endfor %}


                <h3>Модель</h3>

                    {% for item in categories %}
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="category_id" value="{{ item.id }}"> {{ item.title }}
                            </label>
                        </div>
                    {% endfor %}

                <h3>Тоннаж</h3>

                {% for item in tons %}
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="ton[]" value="{{ item }}" {% if loop.first or item==product.ton %}checked{% endif %}> {{ item / 10 }}
                        </label>
                    </div>
                {% endfor %}
            </div>
            <!--/ filter -->

            <!-- result -->
            <div class="col-md-9 col-xs-12 __search_result_box">
                {% for item in list %}
                    <div class="row __search_result_item">
                        <div class="col-md-5">
                            <img src="{{ item.path() }}" alt="" class="__search_result_item_image">
                        </div>
                        <div class="col-md-7">
                            <h3 class="__search_result_item_title space-xs">{{ item.title }}</h3>

                            <p class="space-xs __search_result_text">
                                <span class="_text_gray">Тоннаж</span><br>

                                {% for item in tons %}
                                <label class="radio-inline">
                                    <input type="radio" {% if item==item.ton %}checked{% endif %} disabled > {{ item / 10 }}
                                </label>
                                {% endfor %}
                            </p>

                            <p class="space-xs __search_result_text">
                                <span class="_text_gray">Габариты</span><br>
                                <label class="radio-inline">
                                    <input type="radio" disabled checked> Short 4735 x 1855 x 21855, м
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" disabled> Long 6020 x 1855 x 21855, м
                                </label>
                            </p>

                            <p class="space-xs __search_result_item_price">{{ item.price }} ₽</p>

                            <p class="space-xs">
                                <a href="{{ route('front_configurator_leasing', {typeId: 2, baseId: 4 }) }}" class="btn btn-red btn-space-right">Добавить в Мои заказ</a>
                                <button type="button" class="btn btn-gray-link" data-toggle="modal" data-target="#modal_get_bonus">Открыть в Конфигураторе</button>
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <!--/ result -->
        </div>
    </div>
{% endblock %}