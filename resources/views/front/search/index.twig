{% extends 'front.layouts.app' %}

{% block title %}Лизинговые расчеты{% endblock %}

{% block content %}

    <style>
        .title_a1 {
            margin-top: 54px;
        }

        .__search_result_item {
            margin-bottom: 48px;
        }

        .__search_result_item_title {
            font-size: 30px;
            line-height: 1.5;
        }

        .__search_result_item_price {
            color: #000000;
            font-size: 36px;
            line-height: 1.5;
        }

    </style>

    <div class="container">
        <h1 class="title_a1">Грузовики</h1>

        <div class="row">
            <!-- filter -->
            <div class="col-md-3">
                <h3>Тип грузовика</h3>

                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="">
                        Option one is this and that&mdash;be sure to include why it's great
                    </label>
                </div>
                <div class="checkbox disabled">
                    <label>
                        <input type="checkbox" value="" disabled>
                        Option two is disabled
                    </label>
                </div>


                <h3>Модель</h3>

                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="">
                        Option one is this and that&mdash;be sure to include why it's great
                    </label>
                </div>
                <div class="checkbox disabled">
                    <label>
                        <input type="checkbox" value="" disabled>
                        Option two is disabled
                    </label>
                </div>

                <h3>Тоннаж</h3>

                {% for item in tons %}
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="ton[]" value="{{ item }}" {% if loop.first or item==product.ton %}checked{% endif %}> {{ item / 10 }}
                        </label>
                    </div>
                {% endfor %}
            </div>
            <!--/ filter -->

            <!-- result -->
            <div class="col-md-9">
                {% for item in list %}
                    <div class="row __search_result_item">
                        <div class="col-md-5">
                            <img src="{{ item.path() }}" alt="" width="415">
                        </div>
                        <div class="col-md-7">
                            <h3 class="__search_result_item_title">{{ item.title }}</h3>

                            <p class="space-xs">
                                {% for item in tons %}
                                <label class="radio-inline">
                                    <input type="radio" {% if item==item.ton %}checked{% endif %} disabled > {{ item / 10 }}
                                </label>
                                {% endfor %}
                            </p>



                            <p class="price space-xs">{{ item.price }} ₽</p>

                            <p class="space-xs">
                                <a href="{{ route('front_configurator_leasing', {typeId: 2, baseId: 4 }) }}" class="btn btn-red btn-space-right">Добавить в Мои заказ</a>
                                <button type="button" class="btn btn-gray-link" data-toggle="modal" data-target="#modal_get_bonus">Открыть в Конфигураторе</button>
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <!--/ result -->
        </div>
    </div>
{% endblock %}

