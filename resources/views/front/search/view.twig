{% extends 'front.layouts.app' %}

{% block title %}Лизинговые расчеты{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">

            <div class="col-xs-12 space-xs hidden-lg hidden-md" style="padding: 0 30px">
                <p><br><img src="{{ product.path() }}" alt="" style="width: 100%"></p>
            </div>

            <div class="col-md-6 col-xs-12">
                <h2 class="__catalog_view_title space-xs">{{ product.title }}</h2>
                <h3 class="__catalog_view_sub_title space-xs">{{ product.type }}</h3>
                <p class="__catalog_view_description space-xs">{{ product.description }}</p>


                <div class="row __catalog_view_price_top">
                    <div class="col-md-7 col-xs-12">
                        <p class="__catalog_view_price space-xs"><button type="button" class="btn btn-gray-link" data-toggle="modal" data-target="#modal_get_bonus">Цена по запросу</button></p>
                    </div>
                    <div class="col-md-5 col-xs-12 text-right">
                        <p class="space-xs" style="padding-top: 8px; padding-right: 24px">
                            <button type="button" class="btn btn-red btn-block" data-toggle="modal" data-target="#modal_get_bonus">Получить скидку</button>
                        </p>
                    </div>
                </div>

                <p class="space-xs">
                    {% if product.config_url %}
                        <a href="{{ product.config_url }}" class="btn btn-gray-link">Открыть в Конфигураторе</a>
                    {% endif %}
                </p>
            </div>

            <div class="col-md-6 hidden-xs">
                <img src="{{ product.path() }}" alt="" class="__catalog_view_image">
            </div>
        </div>
    </div>
{% endblock %}