
{# нет отзывов не выводим блок #}
{% if (list | length) > 0 %}

    <style>
        .carousel-control-default {
            text-decoration: none;
        }

        .carousel-control-default:hover {
            text-decoration: none;
        }
    </style>

<div class="row">
    <div class="col-md-12">
        <h2  style="margin-top: 48px; line-height: 38px; text-align: center; color: #445B9F;">{{ title }}</h2>
    </div>
</div>


<div class="row">
    <div class="col-md-8 col-md-offset-2" style="border: 1px solid #ccc; border-radius: 10px">

    {# каруселька #}
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            {% for item in list %}
            <div class="item{% if loop.index == 1 %} active{% endif %}">
                <div class="row" style="padding: 20px 0">
                    <div class="col-md-4">
                        <img src="{{ item.path() }}" alt="..." class="img-circle" style="width:100%">
                    </div>

                    <div class="col-md-8 text-left">
                        <p class="text-justify"><em>{{ item.content }}</em></p>
                        <p class="text-right"><em>{{ item.name }},<br>{{ item.url }}</em></p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Controls -->
        <a class="left carousel-control-default" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control-default" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    </div>
</div>
{% endif %}
